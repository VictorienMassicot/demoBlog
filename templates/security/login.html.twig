{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <h1 class="text-center my-5">Identifiez-vous</h1>

    {% if error %}
        <div class="bg-danger text-white p-3 rounded text-center col-3 mx-auto my-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for message in app.flashes('success') %}

        <div class="col-6 bg-success text-center text-white p-3 mx-auto">
            {{ message }}
        </div>
        
    {% endfor %}

    <form method="post" class="col-4 mx-auto">

        <label for="inputEmail">Email</label>
        <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-dark mt-2" type="submit">
            Continuer
        </button>

    </form>
{% endblock %}