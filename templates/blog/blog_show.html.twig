{% extends "base.html.twig" %}

{% block title %}
    BlogSymfony | Détails de l'article
{% endblock %}

{% block body %}
    
    <h1 class="text-center my-5">Détails de l'article {{ articles.id }}</h1>

        {# {{ dump(articles) }} #}

    <div class="col-md-12">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary">Design</strong>
                <h3 class="mb-0">{{ articles.titre }}</h3>
                <div class="mb-1 text-muted">Publié le {{ articles.date|date('Y-m-d') }}</div>

                <p class="card-text mb-auto">{{ articles.contenu|raw }}</p>

                <p class="mt-3">
                    <a href="{{ path('blog_edit', {'id': articles.id }) }}" class="btn btn-dark">Modifier</a>
                    <a href="#" class="btn btn-dark">Supprimer</a>
                </p>
            </div>
            <div class="col-auto d-none d-lg-block">
                <img src="{{ articles.photo|replace({'300/350': '200/300'}) }}" alt="Picsum">
            </div>
        </div>
    </div>

{% endblock %}