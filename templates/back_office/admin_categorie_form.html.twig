{% extends "base_admin.html.twig" %}


ajouter un bouton dans la nav de avec la route pour l'ajout d'une catégorie "base_admin"
{% %}
{% block title %}
    Blog Symfony | Ajout catégorie
{% endblock %}

{% block body %}

    <h1 class="text-center my-5">
    {# si la variable editMode retourne TRUE, cela veut dire que la catégorie possède un ID, alors c'est une modification #}
    {% if editMode %}
        Modification catégorie
    {% else %}
        {# sinon la catégorie n'en possède pas, c'est une insertion #}
        Nouvelle catégorie
    {% endif %}
    </h1>

    {{ form_start(formCategory) }}

        {{ form_row(formCategory.titre) }}

        {{ form_row(formCategory.description) }}

        <button class="btn btn-dark">Enregistrer</button>

    {{ form_end(formCategory) }}

{% endblock %}