<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css"> 

    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>

    <script src="{{ asset('js/dataTable.js') }}"></script>

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      i{
          font-size: 20px !important;
      }

      .btnhover:hover {
          background-color: white;
          color: #54CF56 !important;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    {% block stylesheets %}
        
    {% endblock %}

    <link href="{{ asset('css/admin.css') }}" rel="stylesheet">

    <title>
        {% block title %}
        Blog Symfony | Back Office 
        {% endblock %}
    </title>
</head>
<body>

<main>

    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark position-fixed h-100" style="width: 15%;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            
            <span class="fs-4 text-center">Viblog | BACKOFFICE</span>
        </a>
        <hr>
        {% set route_name = app.request.attributes.get('_route') %}
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="{{ path('app_admin') }}" class="nav-link text-white btnhover {% if route_name == "app_admin" %} active {% endif %}" aria-current="page">
                    <i class="bi bi-house"></i> Home
                </a>
            </li>
            <li>
                <a href="{{ path('bo_article') }}" class="nav-link text-white btnhover {% if route_name == "bo_article" %} active {% endif %}">
                    <i class="bi bi-newspaper"></i> Articles
                </a>
            </li>
            <li>
                <a href="{{ path('bo_category') }}" class="nav-link text-white btnhover {% if route_name == "bo_category" %} active {% endif %}">
                    <i class="bi bi-card-list"></i> Cat√©gories
                </a>
            </li>
            <li>
                <a href="{{ path('bo_comments') }}" class="nav-link text-white btnhover {% if route_name == "bo_comments" %} active {% endif %}">
                    <i class="bi bi-chat-left-dots"></i> Commentaires
                </a>
            </li>
            <li>
                <a href="{{ path('bo_add_article') }}" class="nav-link text-white btnhover {% if route_name == "bo_add_article" %} active {% endif %}">
                    <i class="bi bi-plus-circle"></i> Nouvel article
                </a>
            </li>
            <li>
                <a href="{{ path('bo_users') }}" class="nav-link text-white btnhover {% if route_name == "bo_users" %} active {% endif %}">
                    <i class="bi bi-person"></i> Users
                </a>
            </li>
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://github.com/VictorienMassicot.png" alt="" width="32" height="32" class="rounded-circle me-2">
                <strong>{{ app.user.prenom }} {{ app.user.nom }}</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="{{ path('blog_create') }}">Nouvel article</a></li>
                <li><a class="dropdown-item" href="{{ path('app_profil') }}">Votre compte</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="{{ path('blog') }}">Quitter</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="{{ path('app_logout') }}">Deconnexion</a></li>
            </ul>
        </div>
    </div>

    <div id="base_admin" class="p-2" style="width: 85%; margin-left: 15%;">
        {% block body %}
            
        {% endblock %}
    </div>

</main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    {% block javascripts %}
        
    {% endblock %}
</body>
</html>